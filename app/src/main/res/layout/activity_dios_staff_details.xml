<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dios_bg"
    tools:context=".DIOS.DIOS_Dashboard">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout38"
      android:layout_width="match_parent"
      android:layout_height="150dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/open_sans"
        android:text="@string/dios_name"
        android:textColor="@color/white"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_herbew_bold"
        android:text="School Grading &amp; Monitoring System"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.cardview.widget.CardView
      android:id="@+id/cardView9"
      android:layout_width="0dp"
      app:cardCornerRadius="10dp"
      android:layout_height="0dp"
      app:cardElevation="5dp"
      android:layout_marginBottom="-25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/constraintLayout38">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <androidx.cardview.widget.CardView
          android:id="@+id/cardView25"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
          app:cardCornerRadius="5dp"
          app:cardElevation="8dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/constraintLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FB8A01"
            android:backgroundTintMode="multiply"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="2.4"
              android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/schoolicon_dios_panel" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1.2"
              android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/schoolName"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/open_sans_herbew_bold"
                  android:letterSpacing=".1"
                  android:textAlignment="center"
                  android:text="SP BAL VIDYA MANDIR"
                  android:textColor="@color/black"
                  android:textSize="16dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/schoolAddress"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="5dp"
                  android:fontFamily="@font/source_pro_bold"
                  android:textAlignment="center"
                  android:textSize="10dp"
                  android:text="New Shivali Road kalyanpur kanpur nagar 208016"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="2.2"
              android:gravity="center">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:backgroundTint="#292929"
                android:src="@drawable/ic_notifications" />


          </LinearLayout>

        </LinearLayout>
      </androidx.cardview.widget.CardView>


      <androidx.cardview.widget.CardView
          android:id="@+id/staffsenctionAndWorking"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="6dp"
          android:layout_marginEnd="8dp"
          android:backgroundTint="@color/DIOS_ColorPrimary"
          app:cardCornerRadius="4dp"
          app:cardElevation="5dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cardView25">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

          <TextView
              android:id="@+id/roomTypetxt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:fontFamily="@font/open_sans_herbew_bold"
              android:text="Staff Sanction &amp; Working"
              android:textColor="#5A5A5A"
              android:textSize="15dp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/updateOntxt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="13 Mar 2022 02:42 PM"
              android:textAlignment="textEnd"
              android:textColor="#6E6E6E"
              android:textSize="15dp" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/allStaffTraing"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:backgroundTint="@color/DIOS_ColorPrimary"
          app:cardCornerRadius="4dp"
          app:cardElevation="5dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/staffsenctionAndWorking">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

          <TextView

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:fontFamily="@font/open_sans_herbew_bold"
              android:text="Principal &amp; Teacher Training"
              android:textColor="#5A5A5A"
              android:textSize="15dp"
              android:textStyle="bold" />

          <TextView

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="13 Mar 2022 02:42 PM"
              android:textAlignment="textEnd"
              android:textColor="#6E6E6E"
              android:textSize="15dp" />

        </LinearLayout>
      </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>